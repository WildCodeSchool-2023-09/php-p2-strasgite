{% extends 'layout.html.twig' %}

{% block title %}Dashboard - Edit Chambres
{% endblock %}

{% block content %}
	<h1>Dashboard</h1>
	<a class="uk-button uk-button-default" href="/admin/Contact">Messages clients</a>
	<a class="uk-button uk-button-default" href="/admin/Tarifs">Edition des chambres</a>

	<div class="uk-container">
		<h2>Edition des chambres</h2>
		<table class="uk-table uk-table-striped">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Options</th>
					<th>Categories</th>
					<th>Prix</th>
					<th>Image</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr>
						<td>
							<a href="admin/reservation/{{ reservation.id }}" class="uk-button uk-button-primary">Voir</a>
							<a href="admin/reservation/{{ reservation.id }}/delete" class="uk-button uk-button-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}
