{% extends 'layout.html.twig' %}
{% block content %}
<form class="form-reservation" method="Post">
    {{dump(session)}}
    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Votre réservation</legend>
        <div class="uk-margin">
            <input class="uk-input uk-form-width-large"  name="firstname" type="text" placeholder="Votre prénom" aria-label="Input" required>
        </div>
        <div class="uk-margin">
            <input class="uk-input uk-form-width-large"  name="lastname" type="text" placeholder="Votre nom" aria-label="Input" required>
        </div>
        <div class="uk-margin">
            <select class="uk-select uk-form-width-large" name="chambre" aria-label="Select" required>
                <option disabled selected hidden>Choisissez votre chambre</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>
        <div class="uk-margin">
            <label for="date_entry">Date d'entrée :</label>
            <input type="date" name="date_entry" required>
        </div>
        <div class="uk-margin">
            <label for="date_exit">Date de sortie :</label>
            <input type="date" name="date_exit" required>
        </div>

        <div class="uk-margin">
            <textarea class="uk-textarea uk-form-width-large" name="demands" rows="5" placeholder="Des demandes à nous spécifier" aria-label="Textarea"></textarea>
        </div>
        <div>
            <button class="uk-button uk-button-default">Envoyer</button>
        </div>
    </fieldset>
</form>
{% endblock %}
